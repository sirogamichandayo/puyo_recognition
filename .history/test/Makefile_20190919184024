get_tumo: get_tumo_tokopuyo.o state_main.o
	g++  -o get_tumo get_tumo_tokopuyo.o state_main.o color.o

get_tumo_tokopuyo.o: get_tumo_tokopuyo.cpp
	g++ -std=c++1z -c get_tumo_tokopuyo.cpp `pkg-config --cflags opencv` `pkg-config --libs opencv` -lX11

state_main.o: ../src/recognition/state_main.cpp
	g++ -std=c++1z -c ../src/recognition/state_main.cpp `pkg-config --cflags opencv` `pkg-config --libs opencv` -lX11

color.o: ../src/recognition/color.cpp
	g++ -std=c++1z -c ../src/recognition/color.cpp

