CC = clang++
VER = -std=c++1z
OPENCV = `pkg-config --cflags opencv` `pkg-config --libs opencv`

get_tumo: get_tumo_tokopuyo.o state_main.o
	$(CC)  -o get_tumo get_tumo_tokopuyo.o state_main.o color.o

color.o: ../src/recognition/color.cpp
	$(CC) $(VER) -c ../src/recognition/color.cpp

state_main.o: ../src/recognition/state_main.cpp
	$(CC) $(VER) -c ../src/recognition/state_main.cpp $(OPENCV) -lX11

get_tumo_tokopuyo.o: get_tumo_tokopuyo.cpp
	$(CC) $(VER) -c get_tumo_tokopuyo.cpp $(OPENCV) -lX11

clean:
	$(RM) *.o