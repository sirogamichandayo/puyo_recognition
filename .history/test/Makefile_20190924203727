get_tumo_mp4: $(SRC_REC)color.cpp $(SRC_REC)state_main.cpp get_tumo_tokopuyo.cpp
	$(CC) -o get_tumo_mp4 $(VER) -g $(SRC_REC)color.cpp $(SRC_REC)state_main.cpp get_tumo_tokopuyo.cpp $(OPENCV) -lX11

get_tumo_screen: $(SRC_REC)color.cpp $(SRC_REC)state_main.cpp get_tumo_tokopuyo1.cpp
	$(CC) -o get_tumo_screen $(VER) -g $(SRC_REC)color.cpp $(SRC_REC)state_main.cpp get_tumo_tokopuyo1.cpp $(OPENCV) -lX11 -lpython2.7

clean:
	$(RM) *.o